function gradeMocha(data) {
    var passedMatch = data.match(/(\d+)\s+passing/);
    var passed = passedMatch ? Number(passedMatch[1]) : 0;
    var failedMatch = data.match(/(\d+)\s+failing/);
    var failed = failedMatch ? Number(failedMatch[1]) : 0;
    var pendingMatch = data.match(/(\d+)\s+pending/);
    var pending = pendingMatch ? Number(pendingMatch[1]) : 0;
    if (passed === 0 && failed === 0 && pending === 0) results.error = 'Error occurred while grading assessment';
    results.passed = passed;
    results.failed = failed + pending;
    results.score = passed / (passed + failed + pending) * 100;
}

function gradeTestem(data) {
    var testsMatch = data.match(/#\s+tests\s+(\d+)/);
    var tests = testsMatch ? Number(testsMatch[1]) : 0;
    var passedMatch = data.match(/#\s+pass\s+(\d+)/);
    var passed = passedMatch ? Number(passedMatch[1]) : 0;
    var failedMatch = data.match(/#\s+fail\s+(\d+)/);
    var failed = failedMatch ? Number(failedMatch[1]) : 0;
    if (passed === 0 && tests === 0 && failed === 0) results.error = 'Error occurred while grading assessment';
    results.passed = passed;
    results.failed = failed;
    results.score = passed / tests * 100;
}
