#!/usr/bin/env node

var output = '';
var testType;

var results = {
    score: null,
    passed: null,
    failed: null,
    error: null
};


process.stdin.on('data', function(data) {
    output += data;
});

process.stdin.on('end', function() {
    if (output.match(/mocha\s--reporter\sspec/)) {
        gradeMocha(output);
    }
    else gradeTestem(output);
    process.stdout.write(JSON.stringify(results,null,4));
});


